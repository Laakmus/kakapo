---
import Layout from '@/layouts/Layout.astro';
import { LoginPage } from '@/components/LoginPage';

// Wymusza renderowanie po stronie serwera (potrzebne dla middleware i request headers)
export const prerender = false;

// Jeśli sesja istnieje, od razu przekieruj
const user = Astro.locals.user;
if (user) {
  throw Astro.redirect('/offers');
}
---

<Layout
  title="Logowanie - KAKAPO"
  description="Zaloguj się do KAKAPO i kontynuuj wymianę rzeczy z innymi użytkownikami"
>
  <LoginPage client:only="react">
    <div slot="fallback" class="min-h-screen flex flex-col items-center justify-center px-4 py-12 bg-background">
      <div class="w-full max-w-md bg-card rounded-lg shadow-md p-8 border border-border text-center">
        <h1 class="text-2xl font-bold text-foreground mb-2">Logowanie</h1>
        <p class="text-muted-foreground">Ładowanie formularza…</p>
      </div>
    </div>
  </LoginPage>
</Layout>
